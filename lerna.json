{
    "packages": [
        "packages/*"
    ],
    "version": "0.8.1",
    "command": {
        "publish": {
            "conventionalCommits": true,
            "ignoreChanges": [
                "*.md",
                "*.txt",
                "stories/**",
                "**/stories/**",
                "test/**",
                "**/test/**"
            ],
            "message": "chore(release): [skip ci] publish %s"
        }
    }
}
