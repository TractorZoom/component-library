{
    "packages": ["packages/*"],
    "version": "independent",
    "command": {
        "publish": {
            "conventionalCommits": true,
            "ignoreChanges": ["*.md", "*.txt", "stories/**", "**/stories/**", "test/**", "**/test/**"],
            "message": "chore(release): [skip ci] publish %s"
        }
    }
}
